{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cars list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Year</th>
                <th>Price</th>
                <th>Description</th>
                <th>Navigation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td><a href="{{ path('cars_show', { 'id': car.id }) }}">{{ car.id }}</a></td>
                <td>{% if car.year %}{{ car.year|date('Y-m-d') }}{% endif %}</td>
                <td>{{ car.price }}</td>
                <td>{{ car.description }}</td>
                <td>{% if car.navigation %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cars_show', { 'id': car.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cars_edit', { 'id': car.id }) }}">edit</a>
                        </li>
                        <li>
                            <a href="{{ path('cars_promote', {'id': car.id}) }}">promote</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cars_new') }}">Create a new car</a>
        </li>
    </ul>
{% endblock %}
